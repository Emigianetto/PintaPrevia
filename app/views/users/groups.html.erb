<div class="panel panel-success">
  <div class="panel-heading">Lista grupos</div>
  <div class="panel-body">

    <p id="notice"><%= notice %></p>

    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Lider</th>
          <th>Activo</th>
          <th>Fecha</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @user.previa_groups.each do |previa_group| %>
          <tr>
            <td><%= previa_group.name %></td>
            <td><%= previa_group.leader.first_name %></td>
            <td><%= previa_group.active %></td>
            <td><%= previa_group.date %></td>
            <td>
              <span class="fa fa-navicon fa-lg"> <%= link_to 'Mostrar', previa_group %> </span>
              <span class="fa fa-edit fa-lg"> <%= link_to 'Editar', edit_previa_group_path(previa_group) %> </span>
              <span class="fa fa-trash fa-lg"> <%= link_to 'Eliminar', previa_group, method: :delete, data: { confirm: 'Â¿Estas seguro?' } %> </span>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to 'Nuevo grupo', new_previa_group_path(@user), class: 'btn btn-primary' %>
  </div>
</div>
