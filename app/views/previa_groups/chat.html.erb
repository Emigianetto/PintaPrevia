<div class="panel panel-primary">
  <div class="panel-heading">Mensajes</div>
  <div class="panel-body panel-height">

  <% if !notice.nil? %>
    <div class="alert alert-success" role="alert">
      <p id="notice"><%= notice %></p>
    </div>
  <% end %>

    <!-- <table class="table table-bordered" summary="Mensajes del grupo">
      <thead>
        <tr>
          <th id="columna_de">De</th>
          <th id="columna_asunto">Asunto</th>
          <th id="columna_fecha">Fecha</th>
        </tr>
      </thead>

      <tbody>
        <% @messages.each do |message| %>
          <tr>
            <td headers="columna_de"><%= message.author.name%></td>
            <td headers="columna_asunto"><%= message.message %></td>
            <td headers="columna_fecha"><%= message.created_at %></td>
          </tr>
        <% end %>
      </tbody>
