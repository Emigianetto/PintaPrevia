<% if !notice.nil? %>
    <div class="alert alert-success" role="alert">
      <p id="notice"><%= notice %></p>
    </div>
  <% end %>

<h1>Lista de propiedades</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @properties.each do |property| %>
      <tr>
        <%= link_to "<span class='fa fa-navicon fa-lg' aria-hidden='true'></span> Mostrar <span class='sr-only' aria-hidden='true'>propiedad #{property.name}</span>".html_safe,property, class: "btn btn-success" %>
        <%= link_to "<span class='fa fa-navicon fa-lg' aria-hidden='true'></span> Editar <span class='sr-only' aria-hidden='true'>propiedad #{property.name}</span>".html_safe, edit_property_path(property), class: "btn btn-primary" %>
        <%= link_to "<span class='fa fa-navicon fa-lg' aria-hidden='true'></span> Eliminar <span class='sr-only' aria-hidden='true'>propiedad #{property.name}</span>".html_safe, property, method: :delete, data: { confirm: '¿Estás seguro?' }, class: "btn btn-danger" %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva propiedad', new_property_path, class: 'btn btn-primary' %>
