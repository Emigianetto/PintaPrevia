<p id="notice"><%= notice %></p>
<div class="panel panel-primary">
  <div class="panel-heading">Lista de grupos</div>
  <div class="panel-body">
  <% if !notice.nil? %>
    <div class="alert alert-success" role="alert">
      <p id="notice"><%= notice %></p>
    </div>
  <% end %>
  
    <table>
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Lider</th>
          <th>Activo</th>
          <th>Fecha</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @previa_groups.each do |previa_group| %>
          <tr>
            <td><%= previa_group.name %></td>
            <td><%= previa_group.leader.first_name %></td>
            <td><%= previa_group.active %></td>
            <td><%= previa_group.date %></td>
            <td><%= link_to 'Mostrar', previa_group %></td>
            <td><%= link_to 'Editar', edit_previa_group_path(previa_group) %></td>
            <td><%= link_to 'Eliminar', previa_group, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>