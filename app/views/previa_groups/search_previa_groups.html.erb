<div class="panel panel-primary">
  <div class="panel-heading">Lista grupos encontrados</div>
  <div class="panel-body">
  <% if !notice.nil? %>
    <div class="alert alert-success" role="alert">
      <p id="notice"><%= notice %></p>
    </div>
  <% end %>
  

    <table class="table table-bordered" summary="Lista de los grupos que coincidieron con los parámetros de búsqueda">
      <thead>
        <tr>
          <th id="columna_nombre">Nombre</th>
          <th id="columna_acciones">Acciones</th>
        </tr>
      </thead>

      <tbody>
        <% @previa_groups_found.each do |previa_group| %>
          <tr>
            <td headers="columna_nombre"><%= previa_group.name %></td>
            <td headers="columna_acciones">
              <%= link_to "<span class='fa fa-navicon fa-lg' aria-hidden='true'></span> Detalles".html_safe,previa_group_details_path(previa_group), class: "btn btn-info" %>
              <%= link_to "<span class='fa fa-check fa-lg' aria-hidden='true'></span> Invitar".html_safe,previa_group_invite_group_path(previa_group), method: :post, data: { confirm: '¿Estás seguro?' }, class: "btn btn-success" %> </span>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>