<%= form_for(@previa_group) do |f| %>
  <div class="row">
    <div class="col-md-6">
      <% if @user.errors[:name].any? %>
      <div class="form-group row vertical-align has-error">
      <% else %>
      <div class="form-group row vertical-align">
      <% end %>
        <%= f.label :name, "Nombre", class: "col-xs-3 col-form-label" %>
        <div class="col-xs-9">
          <%= f.text_field :name, class: "form-control" %>
          <% if @user.errors[:name].any? %>
          <%= @user.errors[:name].first %>
          <% end %>
        </div>
      </div>
      <% if @user.errors[:search_min_age].any? %>
      <div class="form-group row vertical-align has-error">
      <% else %>
      <div class="form-group row vertical-align">
      <% end %>
        <%= f.label :search_min_age, "Edad mÃ­nima", class: "col-xs-3 col-form-label" %>
        <div class="col-xs-9">
          <%= f.number_field :search_min_age, min: 18, max: 90, class: "form-control" %>
          <% if @user.errors[:search_min_age].any? %>
          <%= @user.errors[:search_min_age].first %>
          <% end %>
        </div>
      </div>
      <% if @user.errors[:search_max_age].any? %>
      <div class="form-group row vertical-align has-error">
      <% else %>
      <div class="form-group row vertical-align">
      <% end %>
        <%= f.label :search_max_age, "Edad mÃ¡xima", class: "col-xs-3 col-form-label" %>
        <div class="col-xs-9">
          <%= f.number_field :search_max_age, min: 18, max: 90, class: "form-control" %>
          <% if @user.errors[:search_max_age].any? %>
          <%= @user.errors[:search_max_age].first %>
          <% end %>
        </div>
      </div>
      <% if @user.errors[:search_gender].any? %>
      <div class="form-group row vertical-align has-error">
      <% else %>
      <div class="form-group row vertical-align">
      <% end %>
        <%= f.label :search_gender, "Tipo de grupo", class: "col-xs-3 col-form-label" %>
        <div class="col-xs-9">
          <%= f.select :search_gender, PreviaGroup::GENDER_TYPES, {prompt: "Seleccione sexo"}, {class: "form-control"} %>
          <% if @user.errors[:search_gender].any? %>
          <%= @user.errors[:search_gender].first %>
          <% end %>
        </div>
      </div>
      <% if @user.errors[:search_distance].any? %>
      <div class="form-group row vertical-align has-error">
      <% else %>
      <div class="form-group row vertical-align">
      <% end %>
        <%= f.label :search_distance, "Distancia", class: "col-xs-3 col-form-label" %>
        <div class="col-xs-9">
          <%= f.number_field :search_distance, class: "form-control" %>
          <% if @user.errors[:search_distance].any? %>
          <%= @user.errors[:search_distance].first %>
          <% end %>
        </div>
      </div>
      <div class="actions">
      <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
        Guardar
      <% end %>
      </div>
    </div>
  </div>
<% end %>
