<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group row vertical-align">
        <%= f.label :first_name, "Nombre", class: "col-xs-3 col-form-label" %>
        <div class="col-xs-9">
          <%= f.text_field :first_name, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row vertical-align">
        <%= f.label :last_name, "Apellido", class: "col-xs-3 col-form-label" %>
        <div class="col-xs-9">
          <%= f.text_field :last_name, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row vertical-align">
        <%= f.label :birth_date, "Fecha de nacimiento", class: "col-xs-3 col-form-label" %>
        <div class="col-xs-9">
          <%= date_select("user", "birth_date", :default => Date.today, 
          :order => [:month, :day, :year], :start_year => (Date.today.year - 100), 
          :end_year => Date.today.year, :html_options => {:class => "form-control"}) %>
        </div>
      </div>
      <div class="form-group row vertical-align">
        <%= f.label :email, "Mail", class: "col-xs-3 col-form-label" %>
        <div class="col-xs-9">
          <%= f.email_field :email, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row vertical-align">
        <%= f.label :email_confirmation, "Confirmar mail", class: "col-xs-3 col-form-label" %>
        <div class="col-xs-9">
          <%= f.email_field :email_confirmation, class: "form-control" %>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group row vertical-align">
        <%= f.label :pass, "Clave", class: "col-xs-3 col-form-label" %>
        <div class="col-xs-9">
          <%= f.password_field :pass, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row vertical-align">
        <%= f.label :pass_confirmation, "Confirmar clave", class: "col-xs-3 col-form-label" %>
        <div class="col-xs-9">
          <%= f.password_field :pass_confirmation, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row vertical-align">
        <%= f.label :gender, "Sexo", class: "col-xs-3 col-form-label" %>
        <div class="col-xs-9">
          <%= f.select :gender, User::GENDER_TYPES, {prompt: "Seleccione sexo"}, {class: "form-control"} %>
        </div>
      </div>
      <div class="form-group row vertical-align">
        <%= f.label :city_id, "Ciudad", class: "col-xs-3 col-form-label" %>
        <div class="col-xs-9">
          <%= f.collection_select :city_id, City.all, :id, :name, {prompt: "Seleccione ciudad"}, {class: "form-control"} %>
        </div>
      </div>
      <div class="actions">
      <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
        Guardar
      <% end %>
      </div>
    </div>
  </div>
<% end %>
