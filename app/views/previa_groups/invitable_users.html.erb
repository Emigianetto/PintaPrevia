<div class="panel panel-primary">
  <div class="panel-heading">Lista de usuarios a invitar</div>
  <div class="panel-body">

    <p id="notice"><%= notice %></p>

    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Apellido</th>
          <th>Mail</th>
          <th>Ciudad</th>
          <th colspan="3">Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% @invitable_users.each do |user| %>
          <tr>
            <td><%= user.first_name %></td>
            <td><%= user.last_name %></td>
            <td><%= user.email %></td>
            <td><%= user.city.name %></td>
            <td>
              <span class="fa fa-navicon fa-lg"> <%= link_to 'Invitar', user %> </span>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
