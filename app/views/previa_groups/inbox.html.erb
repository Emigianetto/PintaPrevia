<div class="panel panel-primary">
  <div class="panel-heading">
    <h1>Conversaciones del grupo <%= @previa_group.name %></h1>
  </div>
  <div class="panel-body">

  <% if !notice.nil? %>
    <div class="alert alert-success" role="alert">
      <p id="notice"><%= notice %></p>
    </div>
  <% end %>

    <figure>
    <table class="table table-bordered" aria-labelledby="tabla-conversaciones">
      <thead>
        <tr>
          <th id="columna_de">De</th>
          <th id="columna_asunto">Asunto</th>
          <th id="columna_fecha">Fecha</th>
          <th id="columna_acciones">Acciones</th>
        </tr>
      </thead>

      <tbody>
        <% @chats.each do |chat| %>
          <tr>
            <td headers="columna_de"><%= chat.with(@previa_group).first.name %></td>
            <td headers="columna_asunto"><%= chat.messages.last.message %></td>
            <td headers="columna_fecha"><%= chat.messages.last.created_at.strftime("%d/%m/%Y %H:%M:%S") %></td>
            <td headers="columna_acciones">
              <%= link_to "<span class='fa fa-navicon fa-lg' aria-hidden='true'></span> Ver".html_safe, previa_group_chat_path(@previa_group, :chat => chat), class: "btn btn-success" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
      <figcaption id="tabla-conversaciones" class="sr-only">
        Lista de las conversaciones que tiene el grupo
      </figcaption>
    </figure>
  </div>
</div>
